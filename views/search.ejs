<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 px-4 py-5">
    <div class="border-2 border-zinc-800 flex items-center justify-between px-2 py-1 rounded-md">
        <i class="text-white ri-search-line"></i>
        <input class="ml-1 w-full bg-zinc-900 outline-none text-zinc-400" type="text" placeholder="search username" id="txtt">
    </div>
    <div class="users" id="vinde">

      
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.4/axios.min.js"></script>

  <script>
    let clutter="";
    const inpt= document.querySelector("#txtt");
    const q= document.querySelector("#vinde");
    
    inpt.addEventListener("input",function(){
        axios.get(`/username/${inpt.value}`).then(
          function(data){
            data.data.forEach(function(elem){
              clutter="";
              clutter=clutter+ `<a href="/profile" class="outline-none">
        <div class="text-white flex items-center gap-2 mt-5">
            <div class="image w-[11vw] h-[11vw] rounded-full bg-sky-100">
              <img src="/images/uploads/${elem.profileImage}" class=" w-[11vw] h-[11vw] rounded-full bg-sky-100">
              </div>
            <div class="text">
                <h3>${elem.username}</h3>
                <h4 class="text-xs opacity-30 leading-none">${elem.username}</h4>
            </div>
        </div>
    </a>`
            })
    })
    q.innerHTML=clutter;
    })
    
  </script>
